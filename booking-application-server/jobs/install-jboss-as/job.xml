<joblist>
  <job>
    <!-- we implement a predicatable uuid in order to easily reference uuid from jenkins plugin 
         otherwise we have to figure out how to obtain the randomly generated uuid and configure accordingly in the jenkins/rundeck plugin
         Scheme for uuid is: RUNDECKPROJECT-GROUP-JOBNAME
      -->
    <group>jboss-as</group>
    <name>install-jboss-as</name>
    <id>dtolabs-toolchain-example5-install-jboss-as</id>
    <uuid>dtolabs-toolchain-example5-install-jboss-as</uuid>
    <description>Install the JBoss Application Server</description>

    <loglevel>INFO</loglevel>
    <sequence keepgoing='false' strategy='node-first'>
      <command>
        <exec>rerun jboss-as: install --jboss-as-package-file $RD_OPTION_ARTIFACT</exec>
      </command>
    </sequence>
    <context>
      <project>dtolabs-toolchain-example5</project>
      <options>
        <option name='artifact' enforcedvalues='true' valuesUrl='http://localhost:8080/plugin/rundeck/options/artifact?project=dtolabs-toolchain-example5-jboss-as-rpm&amp;artifactRegex=.*\.rpm'>
          <description>reference to the url of the selected artifact</description>
        </option>
      </options>
    </context>
  </job>
</joblist>
